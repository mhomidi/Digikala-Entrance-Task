{% extends 'base.html.twig' %}

{% block title %}Max Sents{% endblock %}

{% block body %}

    <div class="container_fluid text-center" style="margin-top: 100px;">
        <div class="row">
            <div class ="col-4 offset-4">
                <table class="table  table-dark table-striped">
                    <thead>
                    <tr>
                        <th>Number</th>
                        <th>Amount</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for info in infos %}
                    <tr>
                        <td>{{ info.number }}</td>
                        <td id='name'>{{ info.allSent }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
